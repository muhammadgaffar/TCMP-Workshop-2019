program main
  implicit none

  do N = 1,6
     nSample = 10**N

     ncircle = 0.d0
     do i = 1,nSample
        x = rand()-0.5
        y = rand()-0.5

        circle = 1 - x**2
        if (y**2.le.circle) then
           ncircle = ncricle + 1
        end if

     end do
     pi_approx = 4 * ncircle / nSample

     write(*,*) nSample, pi_approx

  end do

end program main
